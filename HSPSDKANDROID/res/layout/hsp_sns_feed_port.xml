<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hsp.sns.feed.layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/hsp.common.listbackground"
    android:paddingLeft="13.4dp"
    android:paddingRight="13.4dp"
    android:paddingTop="13.4dp"
    android:tag="hsp.sns.feed.layout" >

    <!-- feed 메시지 입력창 -->

    <EditText
        android:id="@+id/hsp.sns.feed.content.edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/hsp_sns_edittext_ractangle"
        android:gravity="left|top"
        android:hint="@string/hsp.sns.feed.message.hint"
        android:inputType="textMultiLine"
        android:padding="6.7dp"
        android:scrollbars="vertical"
        android:tag="hsp.sns.feed.content.edit"
        android:textColor="@color/hsp.feed.text"
        android:textSize="14.74dp" >
    </EditText>

    <!-- facebook feed 레이어 -->

    <RelativeLayout
        android:id="@+id/hsp.sns.feed.facebook.layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/hsp.sns.feed.content.edit"
        android:layout_marginTop="13.4dp"
        android:tag="hsp.sns.feed.facebook.layout"
        android:visibility="gone" >

        <!-- 이미지 사각 영역 -->

        <ImageView
            android:id="@+id/hsp.sns.feed.facebook.image.stroke"
            android:layout_width="87.1dp"
            android:layout_height="87.1dp"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:src="@drawable/hsp_sns_image_ractangle_stroke"
            android:tag="hsp.sns.feed.facebook.image.stroke" />

        <!-- 첨부 이미지 -->

        <ImageView
            android:id="@+id/hsp.sns.feed.facebook.image"
            android:layout_width="85.76dp"
            android:layout_height="85.76dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0.67dp"
            android:layout_marginTop="0.67dp"
            android:scaleType="fitCenter"
            android:tag="hsp.sns.feed.facebook.image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.39dp"
            android:layout_toRightOf="@id/hsp.sns.feed.facebook.image.stroke"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/hsp.sns.feed.facebook.text.name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14.74dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:tag="hsp.sns.feed.facebook.text.name"
                android:textColor="@color/hsp.feed.text"
                android:textSize="16.75dp" />

            <TextView
                android:id="@+id/hsp.sns.feed.facebook.text.caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.7dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:tag="hsp.sns.feed.facebook.text.caption"
                android:textColor="@color/hsp.common.description"
                android:textSize="13.4dp" />

            <TextView
                android:id="@+id/hsp.sns.feed.facebook.text.decription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:ellipsize="end"
                android:lineSpacingExtra="-3dp"
                android:maxLines="2"
                android:padding="0dp"
                android:tag="hsp.sns.feed.facebook.text.decription"
                android:textColor="@color/hsp.common.description"
                android:textSize="13.4dp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- 이미지 첨부 레이어 -->

    <RelativeLayout
        android:id="@+id/hsp.sns.feed.image.layout"
        android:layout_width="fill_parent"
        android:layout_height="85.76dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/hsp.sns.feed.content.edit"
        android:layout_marginTop="15.41dp"
        android:tag="hsp.sns.feed.image.layout" >

        <!-- 이미지 사각 영역 -->

        <ImageView
            android:id="@+id/hsp.sns.feed.image.stroke"
            android:layout_width="87.1dp"
            android:layout_height="87.1dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="6.7dp"
            android:scaleType="fitCenter"
            android:src="@drawable/hsp_sns_image_ractangle_stroke"
            android:tag="hsp.sns.feed.image.stroke" />

        <!-- 첨부 이미지 -->

        <ImageView
            android:id="@+id/hsp.sns.feed.image"
            android:layout_width="85.76dp"
            android:layout_height="85.76dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0.67dp"
            android:layout_marginTop="0.67dp"
            android:scaleType="fitCenter"
            android:tag="hsp.sns.feed.image" />

        <!-- 트위터 입력 메시지 길이 -->

        <TextView
            android:id="@+id/hsp.sns.feed.input.length"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/hsp.sns.feed.image.stroke"
            android:layout_toLeftOf="@id/hsp.sns.feed.image.stroke"
            android:bufferType="spannable"
            android:gravity="right|bottom"
            android:tag="hsp.sns.feed.input.length"
            android:textColor="@color/hsp.feed.text"
            android:textSize="10.05dp" />
    </RelativeLayout>

</RelativeLayout>