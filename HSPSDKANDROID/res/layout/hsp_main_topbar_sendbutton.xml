<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="60.3dp"
    android:layout_height="35.33dp"
    android:tag="hsp.topbar.sendbutton" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:tag="hsp.topbar.sendbutton.enable" >

        <RelativeLayout
            android:id="@+id/hsp.topbar.sendbutton.text.layout"
            android:layout_width="59.63dp"
            android:layout_height="34.66dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hsp.topbar.sendbutton.text"
                android:layout_width="58.96dp"
                android:layout_height="33.99dp"
                android:layout_alignParentRight="true"
                android:background="@color/hsp.topbar.sendbutton.background"
                android:gravity="center"
                android:tag="hsp.topbar.sendbutton.text"
                android:textColor="@color/hsp.topbar.closebutton"
                android:textSize="13.33dp" />

            <ImageView
                android:layout_width="0.67dp"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/hsp.topbar.sendbutton.text"
                android:background="@color/hsp.topbar.sendbutton.line" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.67dp"
                android:layout_below="@id/hsp.topbar.sendbutton.text"
                android:background="@color/hsp.topbar.sendbutton.line" />
        </RelativeLayout>

        <ImageView
            android:layout_width="0.67dp"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/hsp.topbar.sendbutton.text.layout"
            android:background="@color/hsp.common.black" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.67dp"
            android:layout_below="@id/hsp.topbar.sendbutton.text.layout"
            android:background="@color/hsp.common.black" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:tag="hsp.topbar.sendbutton.disable"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/hsp.topbar.sendbutton.text.layout.disable"
            android:layout_width="59.63dp"
            android:layout_height="34.66dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hsp.topbar.sendbutton.text.disable"
                android:layout_width="58.96dp"
                android:layout_height="33.99dp"
                android:layout_alignParentRight="true"
                android:background="@color/hsp.topbar.sendbutton.background.disable"
                android:gravity="center"
                android:tag="hsp.topbar.sendbutton.text.disable"
                android:textColor="@color/hsp.topbar.sendbutton.disable"
                android:textSize="13.33dp" />

            <ImageView
                android:layout_width="0.67dp"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/hsp.topbar.sendbutton.text.disable"
                android:background="@color/hsp.topbar.sendbutton.line.disable" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.67dp"
                android:layout_below="@id/hsp.topbar.sendbutton.text.disable"
                android:background="@color/hsp.topbar.sendbutton.line.disable" />
        </RelativeLayout>

        <ImageView
            android:layout_width="0.67dp"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/hsp.topbar.sendbutton.text.layout.disable"
            android:background="@color/hsp.common.black" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.67dp"
            android:layout_below="@id/hsp.topbar.sendbutton.text.layout.disable"
            android:background="@color/hsp.common.black" />
    </RelativeLayout>

</RelativeLayout>